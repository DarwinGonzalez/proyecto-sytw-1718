  <!--- MODAL AÑADIR NUEVO EVENTO --->
    <div class="modal fade" id="CrearEvento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h2 class="modal-title">Nuevo Evento</h2></br>
          </div>
          <div class="modal-body">
            <form role="form" method="post" action ="/student/evento">
              <div class="row">
                <div class="form-group col-md-4">
                  <label for="fecha">Fecha Inicio</label>
                  <input type="date" class="form-control" name="fecha_inicio" value="">
                </div>
                <div class="form-group col-md-4">
                  <label for="fecha">Fecha Fin</label>
                  <input type="date" class="form-control" name="fecha_fin" value="">
                </div>
                <div class="form-group col-md-4">
                  <label for="titulo_evento">Título</label>
                  <input type="text" class="form-control" name="titulo_evento" value="">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label for="descripcion_evento">Descripción</label>
                  <textarea type="text" class="form-control" name="descripcion_evento" value="" rows="4"></textarea>
                </div>
              </div>
              <br>
              <button type="submit" class="btn btn-primary" onclick="añadir_evento();">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Añadir Evento
              </button>
              <button type="button" class="btn btn-danger" data-dismiss="modal">
                <i class="fa fa-times" aria-hidden="true"></i> Cerrar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!--- MODAL EDITAR EVENTO --->
      <div class="modal fade" id="EditEvento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h2 class="modal-title">Nuevo Evento</h2></br>
            </div>
            <div class="modal-body">
              <form role="form" method="post">
                <div class="row">
                  <div class="form-group col-md-4">
                    <label for="fecha">Fecha Inicio</label>
                    <input type="date" class="form-control" name="fecha_inicio" value="">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="fecha">Fecha Fin</label>
                    <input type="date" class="form-control" name="fecha_fin" value="">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="titulo_evento">Título</label>
                    <input type="text" class="form-control" name="titulo_evento" value="">
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-12">
                    <label for="descripcion_evento">Descripción</label>
                    <textarea type="text" class="form-control" name="descripcion_evento" value="" rows="4"></textarea>
                  </div>
                </div>
                <br>
                <button type="button" class="btn btn-primary" onclick="añadir_evento();">
                  <i class="fa fa-plus-circle" aria-hidden="true"></i> Añadir Evento
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                  <i class="fa fa-times" aria-hidden="true"></i> Cerrar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

