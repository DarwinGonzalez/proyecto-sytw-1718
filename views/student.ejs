  <div class="container" id="">
    <div class="row">
      <div class="col-md-12" id="global">
        <section id="cd-timeline" class="cd-container" id="mensaje">

          <!-- cd-timeline-block -->
          <div class="cd-timeline-block">
            <!-- cd-timeline-img -->
